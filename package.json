{
	"name": "vinyl-rollup",
	"version": "0.4.2",
	"description": "A wrapper for rollup that produces a stream of Vinyl objects.",
	"main": "index.js",
	"module": "index.esm.js",
	"scripts": {
		"prepack": "babel --out-file index.js --source-maps true index.mjs && cpy --rename=index.esm.js index.mjs . && npm run test:actual",
		"test": "del-cli index.js index.js.map && nyc npm run test:actual",
		"release": "standard-version --sign",
		"test:actual": "xo && ava"
	},
	"engines": {
		"node": ">=8"
	},
	"author": "Corey Farrell",
	"license": "MIT",
	"files": [
		"index*.js*"
	],
	"keywords": [
		"gulp",
		"gulpplugin",
		"vinyl",
		"rollup",
		"source maps",
		"sourcemaps"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cfware/vinyl-rollup.git"
	},
	"bugs": {
		"url": "https://github.com/cfware/vinyl-rollup/issues"
	},
	"homepage": "https://github.com/cfware/vinyl-rollup#readme",
	"dependencies": {
		"arrify": "^1.0.1",
		"gulp": "^4.0.0",
		"merge2": "^1.2.3",
		"p-map": "^2.0.0",
		"rollup": "^1.3.0",
		"vinyl": "^2.2.0",
		"vinyl-fs": "^3.0.3"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.2.2",
		"@babel/preset-env": "^7.2.3",
		"@babel/register": "^7.0.0",
		"ava": "^1.0.1",
		"babel-plugin-bare-import-rewrite": "^1.2.0",
		"babel-plugin-istanbul": "^5.1.0",
		"concat-stream": "^2.0.0",
		"cpy-cli": "^2.0.0",
		"del-cli": "^1.1.0",
		"gulp-sourcemaps": "^2.6.4",
		"nyc": "^13.1.0",
		"p-event": "^2.1.0",
		"pump": "^3.0.0",
		"rollup-plugin-babel": "^4.2.0",
		"rollup-plugin-node-resolve": "^4.0.0",
		"standard-version": "^5.0.0",
		"xo": "^0.24.0"
	},
	"nyc": {
		"instrument": false,
		"sourceMap": false,
		"extension": [
			".mjs"
		],
		"include": [
			"index.mjs"
		],
		"check-coverage": true,
		"per-file": true,
		"lines": 100,
		"statements": 100,
		"functions": 100,
		"branches": 100
	},
	"xo": {
		"extensions": [
			"mjs"
		],
		"overrides": [
			{
				"files": "fixtures/*.js",
				"rules": {
					"import/no-extraneous-dependencies": "off",
					"import/no-unresolved": "off"
				}
			}
		]
	}
}
